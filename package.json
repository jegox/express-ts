{
  "name": "express-ts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "prebuild": "rm -rf ./dist",
    "build": "tsc && tsc-alias",
    "start": "node ./dist/index.js",
    "start:dev": "ts-node-dev -r tsconfig-paths/register ./src/index.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.7",
    "ts-node-dev": "^2.0.0",
    "tsc": "^2.0.4",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0"
  },
  "dependencies": {
    "@decorators/di": "^3.1.0",
    "@decorators/express": "^3.0.0",
    "express": "^4.19.2",
    "pg": "^8.11.5",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20"
  },
  "moduleNameMapper": {
    "^@domain/(.+)$": [
      "<rootDir>/src/domain/$1"
    ],
    "^@infrastructure/(.+)$": [
      "<rootDir>/src/infrastructure/$1"
    ],
    "^@usecases/(.+)$": [
      "<rootDir>/src/usecase/$1"
    ]
  }
}
